CC           = @CC@
CFLAGS       = @CFLAGS@ @PAPIPREP@ @BITFLAGS@
THREADFLAGS  = @THREADFLAGS@ @THREADDEFS@
LDFLAGS      = @THREADFLAGS@ @CFLAGS@ @THREADFLAGS@ @BITFLAGS@ -L.. -lgpt @LDFLAGS@ @LIBS@

# Don't use FC because this somethimes results in different defaults make vs gmake

F77          = @F77@
FFLAGS       = @FFLAGS@ @PAPIPREP@ @BITFLAGS@ @DEFS@
FTHREADFLAGS = @FTHREADFLAGS@
FLDFLAGS     = @FTHREADFLAGS@ @BITFLAGS@ -L.. -lgpt @LDFLAGS@ @LIBS@

COBJS = llcost.o depth.o overhead.o
CEXES = llcost   depth   overhead

FOBJS = flopsperclock.o omptest.o errtest.o opscost.o \
        hashtest.o papitest.o
FEXES = flopsperclock   omptest   errtest   opscost \
        hashtest   papitest

all: $(CEXES) $(FEXES)
cexes: $(CEXES)
fexes: $(FEXES)

llcost: llcost.o
	$(CC) -o $@ llcost.o $(LDFLAGS)
depth: depth.o
	$(CC) -o $@ depth.o $(LDFLAGS)
overhead: overhead.o
	$(CC) -o $@ overhead.o $(LDFLAGS)
flopsperclock: flopsperclock.o
	$(F77) -o $@ flopsperclock.o $(FLDFLAGS)
omptest: omptest.o
	$(F77) -o $@ omptest.o $(FLDFLAGS)
errtest: errtest.o
	$(F77) -o $@ errtest.o $(FLDFLAGS)
opscost: opscost.o
	$(F77) -o $@ opscost.o $(FLDFLAGS)
hashtest: hashtest.o
	$(F77) -o $@ hashtest.o $(FLDFLAGS)
papitest: papitest.o
	$(F77) -o $@ papitest.o $(FLDFLAGS)

clean:
	rm $(FOBJS) $(COBJS) $(FEXES) $(CEXES)

# Add appropriate thread flags to threaded executables

overhead.o: overhead.c
	$(CC) -c $(CFLAGS) $(THREADFLAGS) $<
papitest.o: papitest.F
	$(F77) -c $(FFLAGS) $(FTHREADFLAGS) $<
omptest.o: omptest.F
	$(F77) -c $(FFLAGS) $(FTHREADFLAGS) $<
